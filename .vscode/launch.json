{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "server-watch-debug",
            "configurations": [
                "(internal) server-watch-debug",
                "(internal) frontend-dev-server"
            ]
        },
        {
            "name": "server-onced-debug",
            "configurations": [
                "(internal) server-onced-debug",
                "(internal) frontend-dev-server"
            ]
        }
    ],
    "configurations": [
        {
            "name": "(internal) server-watch-debug",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "ts-node-dev-server-app"
            ],
            "env": {
                "NODE_APP_INSTANCE": "site",
                "DEV_MODE": "true"
            },
            "outputCapture": "std",
            "cwd": "${workspaceRoot}/server",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "(internal) server-onced-debug",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/server/src/app.ts",
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "env": {
                "NODE_APP_INSTANCE": "site",
                "DEV_MODE": "true",
            },
            "outputCapture": "std",
            "cwd": "${workspaceRoot}/server",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "(internal) frontend-dev-server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev-server"
            ],
            "cwd": "${workspaceRoot}/frontend",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}